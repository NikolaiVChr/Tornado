<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>


<animation>
    <type>rotate</type>
    <object-name>Canopy</object-name>
	<object-name>PilotName</object-name>
	
    <property>instrumentation/doors/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>  0 </dep></entry>
      <entry><ind> 1 </ind><dep> 60 </dep></entry>
    </interpolation>
    <center>
      <x-m> -2.148 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.642 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y>  1 </y>
      <z>  0 </z>
    </axis>
  </animation>


<animation>
    <type>rotate</type>
    <object-name>CanopyGlass</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>  0 </dep></entry>
      <entry><ind> 1 </ind><dep> 60 </dep></entry>
    </interpolation>
    <center>
      <x-m> -2.148 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.642 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y>  1 </y>
      <z>  0 </z>
    </axis>
  </animation>

<animation>
    <type>rotate</type>
    <object-name>grabBar</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>  0 </dep></entry>
      <entry><ind> 1 </ind><dep> 60 </dep></entry>
    </interpolation>
    <center>
      <x-m> -2.148 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.642 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y>  1 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
  <animation>
    <!-- Objets opaques -->
    <object-name>interior</object-name>
    <object-name>inttour</object-name>

    <!-- Objets transparents -->
    <object-name>intverriere</object-name>
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>CanopyGlass</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intverriere</object-name>
    <object-name>intvitres</object-name>
  </animation>

  <!-- Dash-->
 
<model>
    <path>Aircraft/Tornado/Models/Interior/cockpit.ac</path>
    <offsets>
      <x-m> 0 </x-m>
      <y-m> -0.0 </y-m>
      <z-m> 0.0 </z-m>
    </offsets>
  </model>

<!-- Front Cockpit -->
<model>
  <name>MFD</name>
  <path>Aircraft/Tornado/Models/Interior/Instruments/MFD/mfd2.xml</path>
  <offsets>
   <x-m>-4.55</x-m>
   <y-m>0.06</y-m>
   <z-m>1.21</z-m>
   <pitch-deg>-10</pitch-deg><!-- needs verification! -->
  </offsets>
 </model>

<model>
  <name>MIDS</name>
  <path>Aircraft/Tornado/Models/Interior/Instruments/MIDS/mids-panel.xml</path>
  <offsets>
   <x-m>-7.35</x-m>
   <y-m>0.1</y-m>
   <z-m>0.9</z-m>
   <pitch-deg>15</pitch-deg><!-- needs verification! -->
  </offsets>
 </model>
</PropertyList>

